<h1><%= @book.title %></h1>
<h3><i><%= @book.author %></i></h3>
<br />
<p>
  <%= 'Genre: ' + @book.genre %><br />
  <%= 'Classification: ' + @book.classification %><br />
  <%= 'Type: ' + @book.book_type %><br />
  <%= 'Year: ' + @book.year %>
</p>
<br />
<%= link_to 'Edit Book Details', edit_book_path(@book) %><br />
<%= link_to 'Delete Book', book_path(@book), method: :delete, data: {confirm: 'Are you sure you want to delete this?'} %>