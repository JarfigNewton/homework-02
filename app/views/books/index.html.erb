<h1>Welcome to my Book Catalog app</h1>


<%= form_tag("/books", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<% @books.each do |book| %>
  <div>
    <h3><%= link_to book.title, book_path(book) %></h3><h3> - </h3>
    <h3><%= link_to book.authors, author_path(book) %><h3>
    <br />
  </div>
<% end %>