<h1>Welcome to my Book Catalog app</h1>


<%= form_tag("/books", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<% @books.each do |book| %>
  <div>
    <h3><%= link_to book.title, book_path(book) %> - 
    <% @authorship = Authorship.find(book.id) %>
    <% @author = Author.find(@authorship.author_id) %>
    <%= link_to @author.first_name + ' ' + @author.last_name, author_path(@author) %></h3>
    <br />
  </div>
<% end %>