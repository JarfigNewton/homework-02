<h1>Welcome to the Bookster Book Catalog</h1>


<%= form_tag("/catalog", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<% @books.each do |book| %>
  <div>
    <h3><%= link_to book.information, book_path(book) %>
    <br />
  </div>
<% end %>