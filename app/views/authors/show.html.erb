<h1 class="author"><%= @author.full_name %></h3>
<h3 class="age"><%= 'Age: ' + @author.age.to_s %></h3>
<br />

<h3>Books Written:</h3>
<% @books.each do |book| %>
  <div>
    <p>
      <%= link_to book.title, book_path(book) %>
    </p>
  </div>
<% end %>

<br /><br />
<%= link_to 'Edit Author Details', edit_author_path(@author) %><br />
<%= link_to 'Delete Author', author_path(@author), method: :delete, data: {confirm: 'Are you sure you want to delete this?'} %>